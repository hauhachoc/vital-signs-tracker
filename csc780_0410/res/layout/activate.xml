<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"    
    android:background="#90006400" >

    <TextView
        android:id="@+id/activateTitle"
        android:text="@string/activateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"        
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#000000"                
        android:shadowColor="#51CA95"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="0.6"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/doctorNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/activateTitle" 
        android:layout_marginLeft="10dp"       
        android:text="@string/doctorNameTitle" />

    <EditText
        android:id="@+id/doctorNameField"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/doctorNameTitle"
        android:hint="@string/doctorNameHint" />
	
    <TextView
        android:id="@+id/yourEmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/doctorNameField"  
        android:layout_marginLeft="10dp"      
        android:text="@string/email" />

    <EditText
        android:id="@+id/yourEmailField"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/yourEmailTitle"
        android:hint="@string/emailHint" />
    
    <TextView
        android:id="@+id/yourPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/yourEmailField"
		android:layout_marginLeft="10dp"       
        android:text="@string/password" />

    <EditText
        android:id="@+id/yourPasswordField"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/yourPasswordTitle"
        android:hint="@string/passwordHint" />
    
    <RelativeLayout 
        android:id="@+id/buttonArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/yourPasswordField"
        >
    <Button
        android:id="@+id/okButton"
        android:layout_width="100dp"        
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"                               
        android:text="@string/submitButton"           
        android:onClick="okLoginClick" />
    <Button
        android:id="@+id/resetButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"        
        android:layout_toRightOf="@+id/okButton"        
        android:onClick="resetClick"
        android:text="@string/resetButton" />
    </RelativeLayout>    
 </RelativeLayout>