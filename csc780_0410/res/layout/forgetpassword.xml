<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"   
    android:padding="20dp"
    android:background="#90006400"
    >

    <TextView
        android:id="@+id/forgetPasswordTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"        
        android:text="@string/forgetPasswordTitle"        
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#000000"                
        android:shadowColor="#51CA95"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="0.6" />
    
    <TextView 
        android:id="@+id/forgetPatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgetPatientName"
        android:layout_below="@+id/forgetPasswordTitle"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:textSize="14dp" 
        />
    <EditText
        android:id="@+id/forgetnameField"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/forgetPatientName"
        android:layout_marginBottom="6dp"        
        android:hint="@string/forgetPatientNameHint" />
    
    <TextView 
        android:id="@+id/forgetEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgetEmail"
        android:layout_below="@+id/forgetnameField"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"  
        />
    <EditText
        android:id="@+id/forgetEmailField"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/forgetEmail"
        android:layout_marginBottom="20dp"
        android:hint="@string/forgetEmailHint" />
    
    <RelativeLayout
        android:id="@+id/buttonsArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgetEmailField"
        android:gravity="center_horizontal">
    <Button
        android:id="@+id/forgetOKButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"                       
        android:text="Submit"
        android:layout_marginRight="40dp"        
        android:onClick="forgetOkClick" />
    <Button
        android:id="@+id/forgetresetButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"                
        android:layout_toRightOf="@+id/forgetOKButton"                
        android:onClick="forgetResetClick"
        android:text="@string/resetButton" />
    </RelativeLayout>
</RelativeLayout>
</ScrollView>