<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#90006400"
    android:padding="20dp" >
    
    <TextView 
        android:id="@+id/title1"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="20dp"
    	android:gravity="center"
    	android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#000000"                
        android:shadowColor="#51CA95"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="0.6"
    	android:text="Enter Data Manually (2/2)"/>
              
    <TextView
        android:id="@+id/subtitle1"
        android:layout_below="@+id/title1"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="8dp"    	
    	android:textSize="14dp"
    	android:text="1. Blood Pressure:"    	    
    	/>
    
    <TextView
        android:id="@+id/subtitle1_1"
        android:layout_below="@+id/subtitle1"
        android:layout_width="110dp"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="15dp"
    	android:layout_marginBottom="4dp"    	
    	android:textSize="14dp"
    	android:text="Systole"    	    
    	/>
    
    <TextView
        android:id="@+id/subtitle1_2"
        android:layout_below="@+id/subtitle1"
        android:layout_toRightOf="@+id/subtitle1_1"
        android:layout_width="100dp"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="4dp"    	
    	android:textSize="14dp"
    	android:text="Diastole"    	    
    	/>
    
    <EditText
        android:id="@+id/systole"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle1_1"
        android:layout_alignLeft="@+id/subtitle1_1"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/diastole"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle1_2"
        android:layout_alignLeft="@+id/subtitle1_2"
        android:inputType="number"
        />
    
    <TextView
        android:id="@+id/subtitle2"
        android:layout_below="@+id/systole"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="8dp"
    	android:layout_marginBottom="8dp"    	
    	android:textSize="14dp"
    	android:text="2. Heart Rate:"    	    
    	/>
    <EditText
        android:id="@+id/heartRate"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle2"
        android:layout_marginLeft="15dp"
        android:inputType="number"
        />
    
    <TextView
        android:id="@+id/subtitle3"
        android:layout_below="@+id/heartRate"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="8dp"
    	android:layout_marginBottom="8dp"    	
    	android:textSize="14dp"
    	android:text="3. Body Temperature (F):"    	    
    	/>
    <EditText
        android:id="@+id/bodyTemp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle3"
        android:layout_marginLeft="15dp"
        android:inputType="number"
        />
    
    <Button 
        android:id="@+id/submitButton"
        android:layout_width="100dp" 
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:layout_centerInParent="true"        
        android:gravity="center" 
        android:layout_below="@+id/bodyTemp"
        android:onClick="submitButtonOnClick"
        />

</RelativeLayout>
</ScrollView>