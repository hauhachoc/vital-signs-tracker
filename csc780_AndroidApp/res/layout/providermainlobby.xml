<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    
    <RelativeLayout 
        android:id="@+id/patientMainLobbyPage"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#90006400"
        >
    
    <TextView 
        android:id="@+id/patientMainLobbyTitle"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:text="Provider Main Lobby"    	
    	android:layout_marginTop="10dp"
    	android:layout_marginBottom="40dp"
    	android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#000000"                
        android:shadowColor="#51CA95"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="0.6"
        />
    
	<TableLayout 
    	android:id="@+id/patientMainLobbyLayout"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@+id/patientMainLobbyTitle"
   	 	>
   	 	
	    <TableRow android:id="@+id/firstRow"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:layout_marginBottom="40dp">
			<RelativeLayout 
			    android:id="@+id/firstRowColumnOne"
			    android:layout_width="150dp"			    
	            android:layout_height="wrap_content"	            
	            android:clickable="true"
	            android:onClick="subscribePatientOnClick"
	            >
	        <ImageView
	            android:id="@+id/imageView1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"	            	            
	            android:src="@android:drawable/ic_menu_edit" />

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"	            
	            android:layout_below="@+id/imageView1"
	            android:text="Subscribe New Patient"
	            android:textSize="14dp"
	            android:gravity="center_horizontal"
	            />
	        </RelativeLayout>
			
	    	<RelativeLayout 
			    android:id="@+id/firstRowColumnTwo"
			    android:layout_width="150dp"
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:onClick="providerInboxOnClick">
	        <ImageView
	            android:id="@+id/imageView2"
	            android:layout_width="match_parent"
	            android:layout_height="48dp"
	            android:src="@android:drawable/ic_dialog_email" />

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/imageView2"
	            android:text="Inbox"
	            android:textSize="14dp"
	            android:gravity="center_horizontal" />
			</RelativeLayout>
	    </TableRow>   
	    <TableRow android:id="@+id/secondRow"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"	        
	        android:gravity="center_horizontal"
	        android:layout_marginBottom="40dp">
			<RelativeLayout 
			    android:id="@+id/firstRowColumnOne"
			    android:layout_width="match_parent"			    
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:onClick="displayTableOnClick"
	            >
	        <ImageView
	            android:id="@+id/imageView1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"	            	            
	            android:src="@android:drawable/ic_menu_gallery" />

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"	            
	            android:layout_below="@+id/imageView1"
	            android:text="Display Table"
	            android:textSize="14dp"
	            android:gravity="center_horizontal" />
	        </RelativeLayout>
			
	    	<RelativeLayout 
			    android:id="@+id/firstRowColumnTwo"
			    android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:onClick="displayChartOnClick">
	        <ImageView
	            android:id="@+id/imageView2"
	            android:layout_width="match_parent"
	            android:layout_height="48dp"
	            android:src="@android:drawable/ic_menu_gallery" />

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/imageView2"
	            android:text="Display Chart"
	            android:textSize="14dp"
	            android:gravity="center_horizontal" />
			</RelativeLayout>
	        
	    </TableRow>
    
    	<TableRow android:id="@+id/thirdRow"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"	        
	        android:gravity="center_horizontal"
	        android:layout_marginBottom="20dp">
			<RelativeLayout 
			    android:id="@+id/firstRowColumnOne"
			    android:layout_width="match_parent"			    
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:onClick="signOutOnClick"
	            
	            >
	        <ImageView
	            android:id="@+id/imageView1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"	            	            
	            android:src="@android:drawable/ic_menu_close_clear_cancel" />

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"	            
	            android:layout_below="@+id/imageView1"
	            android:text="Sign Out"
	            android:textSize="14dp"
	            android:gravity="center_horizontal" />
	        </RelativeLayout>
			
	    	<RelativeLayout 
			    android:id="@+id/firstRowColumnTwo"
			    android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            >
	        <ImageView
	            android:id="@+id/imageView2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	             />

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/imageView2"	            
	            android:gravity="center_horizontal" />
			</RelativeLayout>
	        
	    </TableRow>
</TableLayout>
</RelativeLayout>
</ScrollView>