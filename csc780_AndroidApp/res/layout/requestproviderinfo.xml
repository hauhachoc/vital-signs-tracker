<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#90006400"
    >
    
    <TextView
        android:id="@+id/infoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Provider Information"        
        android:layout_marginBottom="30dp"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#000000"                
        android:shadowColor="#51CA95"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="0.6"        
        />
    
    <TextView 
        android:id="@+id/firstName"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginBottom="15dp"
        android:text="Doctor's First Name"
        android:layout_below="@+id/infoTitle"
        />
    
    <TextView 
        android:id="@+id/firstNameField"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/firstName"
        android:layout_below="@+id/infoTitle"
        android:layout_marginBottom="15dp"
        android:textSize="14dp"        
        />
    
    <TextView 
        android:id="@+id/lastName"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstName"
        android:layout_marginBottom="15dp"
        android:textSize="14dp"
        android:text="Doctor's Last Name"
        />
    
    <TextView 
        android:id="@+id/lastNameField"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lastName"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/firstNameField"
        android:textSize="14dp"        
        />
    
    <TextView 
        android:id="@+id/email"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastName"
        android:textSize="14dp"
        android:text="Doctor's Email"
        android:layout_marginBottom="15dp"
        />
    
    <TextView 
        android:id="@+id/emailField"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lastName"
        android:layout_below="@+id/lastNameField"
        android:textSize="14dp"        
        android:layout_marginBottom="15dp"
        />
    
    <TextView 
        android:id="@+id/phone"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:textSize="14dp"
        android:text="Doctor's Phone#"
        android:layout_marginBottom="15dp"
        />
    
    <TextView 
        android:id="@+id/phoneField"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/phone"
        android:layout_below="@+id/emailField"
        android:textSize="14dp"        
        android:layout_marginBottom="15dp"
        />
    
    

</RelativeLayout>